extends ../index.pug

block css-local
  style
    include style/login.css

block navbar-right

block no-user-content
  .container
    form#form-login(method='post' action='/users/login')
      .row
        .col-12
          h2 Sign In
          
          hr

        .col-12
          label.sr-only(for='email') Email address
          input.form-control(
            type='email'
            name='email'
            placeholder='Email address'
            required
            autofocus
          )
          label.sr-only(for='password') Password
          input.form-control(
            type='password'
            name='password'
            placeholder='Password'
            required
          )

        .col-12
          button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in

        .col-12
          .hr-with-text
            .text or
            hr
        .col-12.text-center
            a(href='/users/register') Click here to register
