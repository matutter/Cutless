extends ../index.pug

block css-local
  style
    include style/login.css

block main-content
  .container
    form#form-register
      .col-12
        .row
          h2 Register

        .row
          label.sr-only(for='email') Email address
          input.form-control(
            type='email'
            name='email'
            placeholder='Email address'
            required
            autofocus
          )
          label.sr-only(for='password') Password
          input.form-control(
            type='password'
            name='password'
            placeholder='Password'
            required
          )

        .row
          button.btn.btn-lg.btn-primary.btn-block(type='submit') Register

