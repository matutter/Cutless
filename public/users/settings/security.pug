extends ./index.pug

block title
  title Settings | Security

block settings-content
  
  .row
    .offset-3.col-6
      h4 Update Password
      h6.mb-2.text-muted Last changed #{user.updatedAt}
      p
        | Passwords must be at least 6 characters in length and contain at least
        | one uppercase letter, special character, and number.
      a#show-password-form(data-target='#password-form' href='#') Change password

  #password-form.row.collapse
    .offset-3.col-6.mt-3
      form.col-lg-6.px-0(method='POST' action='/users/settings/security/password')
        input.mb-1.form-control(type='password' autocomplete='off' name='current' placeholder='Current password')
        input.mb-1.form-control(type='password' autocomplete='off' name='password' placeholder='New password')
        input.mb-1.form-control(type='password' autocomplete='off' name='password_confirm' placeholder='Retype new password')
        button.btn.btn-primary(type='submit') Update
