.navbar.navbar-fixed-top.navbar-inverse
  .container-fluid
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-responsive-collapse')
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Dropnode

    .navbar-collapse.collapse.navbar-responsive-collapse

      ul.nav.navbar-nav.navbar-right
        if user
          li.dropdown
            a.dropdown-toggle(href="#" data-toggle='dropdown')
              .btn-label=user.name
              .btn.btn-fab.withoutripple
                +icon('person')
            ul.dropdown-menu
              li
                a(href='/users/account') Account Settings
              li.divider
              li
                form(method='post' action='/users/logout')
                  input.hidden(name='name' value=user.name)
                  button.btn.btn-block.btn-warning.mg-off(type='submit') Logout

        else
          li
            a.withoutripple(href='/users/login')
              .btn-label Login
              .btn.btn-fab
                +icon('person_outline')

  #navbar-shadow

    //- example
      ul.nav.navbar-nav
        li.active
          a(href='#') Active

        +dropdown('Droppy')
          li
            a(href='#') Linky
 
    //- example
      ul.nav.navbar-nav.navbar-right
        +dropdown('DropDown')
          li
            a(href='#') Action
          li.divider
          li.dropdown-header header
          li
            a(href='#') Separated link
