extends ./index.pug

block body
  .container
    .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3#login
      .well.text-center
        h1 Log In
        hr
        form.form-vertical(action='/users/login' method='POST')
          include form.pug
            button.btn.btn-lg.btn-block.btn-primary(type='submit') Log in
        hr
        a(href='/users/password/reset') Forgot password?
      p.text-center Don't have an account? #[a.btn(href='/users/register') Sign Up]
