extends ./index.pug

block body
  .container
    .col-sm-6.col-sm-offset-3#login
      p.text-right Don't have an account? | #[a(href='/users/register') Register here]
        .well
          h1 SIGN IN
          form.form-vertical(action='/users/login' method='POST')
            include form.pug
              +toggle(false, 'inverse') Remember me
              button.btn.btn-raised.btn-primary(type='submit') Log in

      a(href='/users/password/reset') Reset password
