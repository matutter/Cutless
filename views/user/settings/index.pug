extends ../../index.pug

block js-local
  +js('/js/pages/users/settings.js')

block css-local
  +css-local('user')

block body-user
  #users-settings.container.col-xs-12
    .page-header
      h1 Settings
    .row
      .col-sm-2
        .nav.nav-stacked.dynamic-navigation(data-target='#settings-nav-target')
          h4.strong
            span=user.name
          li.active
            a(href='/users/settings/profile') Profile
          li
            a(href='#disabled') Security

      .col-sm-10#settings-nav-target
        include ./profile.pug
